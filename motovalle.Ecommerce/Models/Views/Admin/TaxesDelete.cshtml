@model Ecommerce.Models.Entities.Taxes
@{
    ViewData["Title"] = "TaxesDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container">
        <div>
            <div class="col-12 text-center">
                <h1 class="m-0 text-dark">Eliminar</h1>
            </div>
            <div class="text-left">
                <p>
                    <a asp-action="Taxes" asp-controller="Admin" class="btn btn-md btn-dark"><span class="fa fa-arrow-circle-left"></span> Volver</a>
                </p>
            </div>
            <div class="col-12 text-center">
                <h2 class="m-0 text-dark"><b>¿Estás seguro de querer eliminar este registro?</b></h2>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger text-center wow zoomInUp" role="alert" data-wow-delay="0.5s">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>¡Ups!..</strong> @ViewBag.Message &#128577;
                </div>
            }
        </div>
        <hr />
        <div class="col-lg-offset-3">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TaxesId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxesId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TaxName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TaxPercent)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxPercent)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TaxDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxDescription)
                </dd>
            </dl>
            <hr />
            <form method="post" asp-action="TaxesDeleteConfirmed" asp-controller="Admin">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TaxesId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}