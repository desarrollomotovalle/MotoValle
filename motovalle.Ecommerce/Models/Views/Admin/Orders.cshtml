@model IEnumerable<Ecommerce.Models.Entities.Orders>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container">
        <div>
            <div class="col-12 text-center">
                <h1 class="m-0 text-dark">Ordenes</h1>
            </div>

            @{ await Html.RenderPartialAsync("_MessageStatus"); }
        </div>
    </div>

    <div class="container-fluid">
        <div class="table">
            <table id="dtTableDefault" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(x => x.OrderNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaymentMethod)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subtotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tax)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Shipping)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PartialAmountPaid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Notes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdentificationType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdentificationNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AlternateNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillToAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillToCity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillToState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillToZipcode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipToAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipToCity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipToState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShipToZipcode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FKFundingRequestsId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FkCustomers)
                        </th>
                        <th>
                            Detalles
                        </th>
                        <th>
                            Editar
                        </th>
                        <th>
                            Eliminar
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentMethod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subtotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shipping)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <th>
                                @Html.DisplayFor(modelItem => item.PartialAmountPaid)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Notes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdentificationType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdentificationNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlternateNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillToAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillToCity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillToState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillToZipcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShipToAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShipToCity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShipToState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShipToZipcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionId)
                            </td>
                            <td>
                                @if ((item.FKFundingRequestsId ?? 0) > 0)
                                {
                                    <a class="btn btn-outline-primary btn-block" style="width:100%" asp-action="FundingRequests" asp-controller="Admin" asp-route-id="@item.FKFundingRequestsId"><span class="fa fa-eye"></span> Ver solicitud</a>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FkCustomers.FullName)
                            </td>
                            <td><a class="btn btn-primary btn-block" style="width:100%" asp-action="OrdersDetails" asp-controller="Admin" asp-route-id="@item.OrdersId"><span class="fa fa-eye"></span></a></td>
                            <td><a class="btn btn-info btn-block" style="width:100%" asp-action="OrdersEdit" asp-controller="Admin" asp-route-id="@item.OrdersId"><span class="fa fa-pencil-alt"></span></a></td>
                            <td><a class="btn btn-danger btn-block" style="width:100%" asp-action="OrdersDelete" asp-controller="Admin" asp-route-id="@item.OrdersId"><span class="fa fa-times"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


@section Scripts{
    <script type="text/javascript" src="~/admin/dist/js/admin-ecommerce-tables-settings-default.js"></script>
}
