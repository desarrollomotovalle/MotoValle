@model motovalle.Ecommerce.Models.ViewModels.Admin.InventoryItemPicturesViewModel

@{
    ViewData["Title"] = "InventoryItemPicturesCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container">
        <div>
            <div class="col-12 text-center">
                <h1 class="m-0 text-dark">Crear Nuevo Registro</h1>
            </div>
            <div class="text-left">
                <p>
                    <a asp-action="InventoryItemPictures" asp-controller="Admin" asp-route-inventoryItemId="@ViewBag.FkInventoryItemsId" class="btn btn-md btn-dark"><span class="fa fa-arrow-circle-left"></span> Volver</a>
                </p>
            </div>
        </div>

        <div class="col-lg-offset-3 ">
            <form method="post" asp-action="InventoryItemPicturesCreate" asp-controller="Admin" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InventoryItemPicturesId" />
                <input type="hidden" asp-for="FkInventoryItemsId" value="@ViewBag.FkInventoryItemsId" />
                <span asp-validation-for="FkInventoryItemsId" class="text-danger"></span>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="PictureName" class="control-label"></label>
                            <input asp-for="PictureName" class="form-control" />
                            <span asp-validation-for="PictureName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <label asp-for="PictureWidth" class="control-label"></label>
                            <input asp-for="PictureWidth" class="form-control" />
                            <span asp-validation-for="PictureWidth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <label asp-for="PictureHeight" class="control-label"></label>
                            <input asp-for="PictureHeight" class="form-control" />
                            <span asp-validation-for="PictureHeight" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="AlternateText" class="control-label"></label>
                            <input asp-for="AlternateText" class="form-control" />
                            <span asp-validation-for="AlternateText" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="PictureUrl" class="control-label"></label>
                            <br />
                            @Html.EditorFor(x => x.PictureFile, new { id = "coverPictureId", type = "file", accept = ".jpg,.png,.jpeg", @class = "form-control" })
                            <span asp-validation-for="PictureUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}