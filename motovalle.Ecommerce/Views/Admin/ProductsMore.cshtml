            <hr />
            <div class="text-left">
                <p>
                    <a asp-action="ProductsEdit" asp-controller="Admin" asp-route-id="@Model.ProductsId" class="btn btn-md btn-outline-dark"><span class="fa fa-pencil-alt"></span> Editar</a>
                </p>
                <p>
                    <a asp-action="Products" asp-controller="Admin" class="btn btn-md btn-dark"><span class="fa fa-arrow-circle-left"></span> Volver</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!--360 -->
    <script src="https://cdn.scaleflex.it/plugins/js-cloudimage-360-view/2/js-cloudimage-360-view.min.js"></script>
