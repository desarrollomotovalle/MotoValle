@model IEnumerable<Ecommerce.Models.Entities.Colors>

@{
    ViewData["Title"] = "Colors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container">
        <div>
            <div class="col-12 text-center">
                <h1 class="m-0 text-dark">Colores por Marca</h1>
            </div>
            <div class="text-left">
                <p>
                    <a asp-action="ColorsCreate" asp-controller="Admin" class="btn btn-md btn-dark">Crear nuevo registro <span class="fa fa-plus-square"></span></a>
                </p>
            </div>

            @{ await Html.RenderPartialAsync("_MessageStatus"); }
        </div>

        <div class="table">
            <table id="dtTableDefault" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">
                            @Html.DisplayNameFor(x => x.ColorsId)
                        </th>
                        <th class="th-sm">
                            @Html.DisplayNameFor(x => x.ColorName)
                        </th>
                        <th class="th-sm">
                            @Html.DisplayNameFor(x => x.FkMakes)
                        </th>
                        <th class="th-sm">
                            Editar
                        </th>
                        <th class="th-sm">
                            Eliminar
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ColorsId)</td>
                            <td>@Html.DisplayFor(modelItem => item.ColorName)</td>
                            <td>@Html.DisplayFor(modelItem => item.FkMakes.MakeName)</td>
                            <td><a class="btn btn-info btn-block" style="width:33%" asp-action="ColorsEdit" asp-controller="Admin" asp-route-id="@item.ColorsId"><span class="fa fa-pencil-alt"></span></a></td>
                            <td><a class="btn btn-danger btn-block" style="width:33%" asp-action="ColorsDelete" asp-controller="Admin" asp-route-id="@item.ColorsId"><span class="fa fa-times"></span></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


@section Scripts{
    <script type="text/javascript" src="~/admin/dist/js/admin-ecommerce-tables-settings-default.js"></script>
}
